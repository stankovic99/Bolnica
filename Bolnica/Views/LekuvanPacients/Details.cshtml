@model Bolnica.Models.LekuvanPacient

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <h4>Лекуван пациент</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Доктор
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doktor.FullName)
        </dd>
        <dt class="col-sm-2">
            Пациент
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pacient.FullName)
        </dd>
        <dt class="col-sm-2">
            Лек
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lek)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Измени</a> |
    <a asp-action="Index">Назад до листата</a>
</div>
