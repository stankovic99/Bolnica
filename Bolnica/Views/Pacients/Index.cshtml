@model Bolnica.ViewModels.PacientViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Листа на пациенти</h1>

<p>
    <a asp-action="Create">Додади пациент</a>
</p>
<form asp-controller="Pacients" asp-action="Index" method="get">
    <p>
        Име и презиме: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Филтрирај" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Име и презиме
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacienti[0].PrethodniBolesti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacienti[0].PriemenDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pacienti[0].Vozrast)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pacienti) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrethodniBolesti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriemenDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vozrast)<span> год.</span>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Измени</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Избриши</a> |
                <a asp-action="Doktori" asp-route-id="@item.Id">Доктори</a>
            </td>
        </tr>
}
    </tbody>
</table>
